\newcommand{\makeTitlepage}{
	\begin{titlepage}
		\begin{center}
			\includegraphics[width=0.7\textwidth]{Logos/HvA_compact_zwart_RGB.pdf}
			\\[0.5cm]
			{\Large \@extraInfo}
			\\[0.5cm]
			\rule{\linewidth}{0.5mm}\\[0.4cm]
			{\huge \bfseries \@doctitle \\[0.4cm]}
			\rule{\linewidth}{0.5mm}\\[1.5cm]

			\noindent
			\emph{Auteurs:} 
			\@docAuthor
			\\[10cm]
			Datum: \today
		\end{center}
	\end{titlepage}
}

